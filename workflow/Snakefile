rule prepare_scenarios:
	output:
		expand("results_test/simulations/scenario_{sc}.yaml", sc=config['scenarios']),
		expand("results_test/simulations/scenario_{sc}.json", sc=config['scenarios']),
		expand("results_test/simulations/scenario_{sc}.svg", sc=config['scenarios']),
	conda:
		"envs/popgensim.yaml"
	script:
		"scripts/scenarios.py"

rule paper_figure:
	input:
		sim_neutral = 'results_test/simulations/sim_msprime_scenario_2A.pickle',
